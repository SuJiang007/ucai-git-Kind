<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f9f6f6">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#33063d">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_action_back"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:id="@+id/back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="通知"
            android:textSize="20sp"
            android:textColor="#f9f6f6"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:layout_weight="9"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="清除"
            android:textSize="20sp"
            android:layout_weight="1"
            android:textColor="#f9f6f6"
            android:layout_gravity="center_vertical"
            android:id="@+id/clear"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/like">
       <ImageView
           android:layout_width="70dp"
           android:layout_height="70dp"
           android:layout_marginLeft="10dp"
           android:layout_marginRight="10dp"
           android:src="@drawable/ic_same_message_like"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="喜欢"
            android:layout_gravity="center_vertical"
            android:textSize="20sp"
            android:textColor="#400c4e"
            android:layout_weight="2"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_arrow_right"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"/>
    </LinearLayout>
    <View
        android:layout_marginTop="10dp"
        android:layout_marginLeft="90dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#777"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:id="@+id/who_look_me">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_same_message_saw"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="谁看了我"
            android:layout_gravity="center_vertical"
            android:textSize="20sp"
            android:textColor="#400c4e"
            android:layout_weight="2"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_arrow_right"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"/>
    </LinearLayout>
    <View
        android:layout_marginTop="10dp"
        android:layout_marginLeft="90dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#777"/>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listview"/>

</LinearLayout>
